<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgThumbnail_ProductScreen"
        android:layout_width="79dp"
        android:layout_height="114dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.089"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txtBookName_ProductScreen"
        android:layout_width="237dp"
        android:layout_height="55dp"
        android:layout_marginTop="8dp"
        android:text="Tuổi trẻ đáng giá bao nhiêu (tái bản)"
        android:textColor="#000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.325"
        app:layout_constraintStart_toEndOf="@+id/imgThumbnail_ProductScreen"
        app:layout_constraintTop_toTopOf="@+id/imgThumbnail_ProductScreen" />

    <TextView
        android:id="@+id/txtCost_ProductScreen"
        android:layout_width="99dp"
        android:layout_height="18dp"
        android:layout_marginTop="68dp"
        android:text="65.700 VND"
        android:textColor="#FF0000"
        app:layout_constraintTop_toTopOf="@+id/imgThumbnail_ProductScreen"
        tools:layout_editor_absoluteX="130dp" />

    <TextView
        android:id="@+id/txtAuthor_ProductScreen"
        android:layout_width="229dp"
        android:layout_height="24dp"
        android:layout_marginTop="88dp"
        android:text="Dinh Nhat Phan"
        app:layout_constraintTop_toTopOf="@+id/imgThumbnail_ProductScreen"
        tools:layout_editor_absoluteX="130dp" />

</androidx.constraintlayout.widget.ConstraintLayout>